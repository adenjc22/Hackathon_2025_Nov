# Backend Environment Variables
# Copy this to .env and fill in your values

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Azure Face API
AZURE_FACE_KEY=your_azure_face_api_key_here
AZURE_FACE_ENDPOINT=your_azure_endpoint_here

# OpenAI API (Required for embeddings and captions)
OPENAI_API_KEY=your_openai_api_key_here

# Database (Railway will provide this automatically)
# For development: SQLite is used by default
# For production: Set to PostgreSQL connection string
DATABASE_URL=sqlite:///./legacy_album.db

# Optional: Secret key for JWT tokens
SECRET_KEY=your-secret-key-here
